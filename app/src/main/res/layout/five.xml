<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom='true'
            android:layout_centerHorizontal='true'
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/zhi" />

        <TextView
            android:id="@+id/tV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom='true'
            android:layout_centerHorizontal='true'
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/home"
            android:padding='5dp'
            android:text="@string/app_home"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:onClick="onClick"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom='true'
            android:layout_centerHorizontal='true'
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/hot"
            android:padding='5dp'
            android:text="@string/app_hot"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:onClick="onClick"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom='true'
            android:layout_centerHorizontal='true'
            android:layout_margin="15dp"
            android:background="@drawable/tool"
            android:padding='5dp'
            android:text="@string/app_tool"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:onClick="onClick"
            android:clickable="true"
            />

        <TextView
            android:id="@+id/tV4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom='true'
            android:layout_centerHorizontal='true'
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/mor"
            android:padding='5dp'
            android:text="@string/app_more"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:onClick="onClick"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tV5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom='true'
            android:layout_centerHorizontal='true'
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/content"
            android:padding='5dp'
            android:text="@string/app_content"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:onClick="onClick"
            android:clickable="true"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>